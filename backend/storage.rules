rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public Access Rules for News App Media
    // Read/Write: Enabled for development/testing environments
    
    // Permitir lectura y escritura en toda la colección de artículos
    match /media/{allPaths=**} {
      allow read, write: if true;
    }
    match /articles/{allPaths=**} {
      allow read, write: if true; // TEMPORAL - cambiar a auth check en producción
    }
  }
}